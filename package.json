{
  "name": "sistema-de-gestao-cartoes",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "cacheDirectories": [
    "node_modules",
    "server/node_modules"
  ],
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.9",
    "axios": "^0.21.1",
    "concurrently": "^6.0.0",
    "date-fns": "^2.20.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "pm2": "^4.5.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.2.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "dev": "concurrently --kill-others \"yarn run dev:server\" \"yarn run dev:client\"",
    "build": "yarn run build:server && yarn run build:client",
    "build:server": "cd ./server && yarn && yarn build",
    "dev:client": "react-scripts start",
    "dev:server": "yarn run build:server && cd ./server && yarn start",
    "build:client": "yarn && react-scripts build",
    "start": "pm2-runtime start pm2.json --env production",
    "serve:kill": "pm2 kill"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "dotenv": "^8.2.0"
  }
}
